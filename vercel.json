{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/styles/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/policies/privacy",
      "destination": "/policies/privacy/index.html"
    },
    {
      "source": "/policies/terms",
      "destination": "/policies/terms/index.html"
    },
    {
      "source": "/policies/cookies",
      "destination": "/policies/cookies/index.html"
    },
    {
      "source": "/apps/:app",
      "destination": "/apps/:app/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/privacy",
      "destination": "/policies/privacy",
      "permanent": true
    },
    {
      "source": "/terms",
      "destination": "/policies/terms",
      "permanent": true
    }
  ]
}